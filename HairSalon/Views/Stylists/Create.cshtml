@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist


<h1>Add a stylist</h1>

@using (Html.BeginForm())
{
  <p>Name</p>
  <p>@Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</p>
  <p>Phone</p>
  <p>@Html.TextBoxFor(model => model.Number, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</p>
  <br>
  <input type="submit" value="Save stylist" class="btn btn-primary" />
}
<br>
<p>@Html.ActionLink("Back to stylists", "Index")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>